<form string="Send Email" col="2">
    <label name="from_"/>
    <field name="from_"/>
    <label name="to"/>
    <field name="to"/>
    <label name="cc"/>
    <field name="cc"/>
    <label name="bcc"/>
    <field name="bcc"/>
    <label name="subject"/>
    <field name="subject"/>
    <notebook colspan="6">
        <page string="Plain" id="plain">
            <field name="plain" colspan="6"/>
        </page>
        <page string="HTML" id="html">
            <label name="send_html"/>
            <field name="send_html"/>
            <newline/>
            <field name="html" colspan="6"/>
        </page>
        <page string="Advanced" id="advanced">
            <label name="queue"/>
            <field name="queue"/>
        </page>
    </notebook>
    <separator name="total" colspan="2"/>
    <field name="total" colspan="2"/>
    <newline/>
    <field name="template" invisible="1"/>
    <field name="message_id" invisible="1"/>
    <field name="in_reply_to" invisible="1"/>
    <field name="single" invisible="1"/>
</form>
